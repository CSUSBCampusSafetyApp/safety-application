<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#0065BD"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MenuPage">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_anonymoustips_subject"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:hint="Subject"
        android:padding="8dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:ems="10"
        android:id="@+id/et_anonymoustips_message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/et_anonymoustips_subject"
        android:layout_alignEnd="@+id/et_anonymoustips_subject"
        android:layout_below="@+id/et_anonymoustips_subject"
        android:layout_above="@+id/btn_anonymoustips_submit"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:textSize="27sp"
        android:hint="Message"
        android:padding="8dp"
        android:layout_marginTop="4dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btn_anonymoustips_submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/et_anonymoustips_message"
        android:layout_alignEnd="@+id/et_anonymoustips_message"
        android:background="#A8E36D"
        android:layout_marginTop="4dp"/>
</RelativeLayout>
