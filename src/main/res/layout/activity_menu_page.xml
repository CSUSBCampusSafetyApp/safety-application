<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".menu_page">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout"></FrameLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/world"
        android:layout_gravity="center"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="97dp"
        android:id="@+id/resources"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/aboutus"
        android:src="@drawable/abousus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_alignTop="@+id/resources"
        android:layout_toRightOf="@+id/frameLayout"
        android:layout_toEndOf="@+id/frameLayout" />
    <ImageView
        android:id="@+id/services"
        android:src="@drawable/reports"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/aboutus"
        android:layout_alignStart="@+id/aboutus" />
    <ImageView
        android:id="@+id/tips"
        android:src="@drawable/tips"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/services"
        android:layout_alignLeft="@+id/resources"
        android:layout_alignStart="@+id/resources" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="About Us"
        android:textColor="#ffffff"
        android:id="@+id/textView"
        android:layout_below="@+id/aboutus"
        android:layout_alignLeft="@+id/aboutus"
        android:layout_alignStart="@+id/aboutus"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Resources"
        android:textColor="#ffffff"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/resources"
        android:layout_alignStart="@+id/resources"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Services"
        android:textColor="#ffffff"
        android:id="@+id/textView3"
        android:layout_below="@+id/services"
        android:layout_alignLeft="@+id/services"
        android:layout_alignStart="@+id/services"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Anonymous Tips"
        android:textColor="#ffffff"
        android:id="@+id/textView4"
        android:gravity="center"
        android:layout_below="@+id/tips"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

</RelativeLayout>
