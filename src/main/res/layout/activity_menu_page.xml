<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/csusb_background_menu"
    android:id="@+id/menu_mainlayout"
    android:paddingTop="120dp" tools:context=".menu_page">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">

        <RelativeLayout
            android:id="@+id/aboutus"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/aboutus_child"
                android:src="@drawable/aboutus"
                android:layout_width="70dp"
                android:layout_height="70dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="About Us"
                android:textColor="#ffffff"
                android:id="@+id/textView"
                android:layout_below="@id/aboutus_child"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/services"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:id="@+id/services_child"
                android:src="@drawable/reports"
                android:layout_width="70dp"
                android:layout_height="70dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Services"
                android:textColor="#ffffff"
                android:id="@+id/textView3"
                android:layout_below="@+id/services_child"
                android:layout_alignLeft="@+id/services_child"
                android:layout_alignStart="@+id/services_child"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/resources"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:clickable="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:src="@drawable/world"
                    android:id="@+id/resources_child" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Resources"
                    android:textColor="#ffffff"
                    android:id="@+id/textView2"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold" />

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:id="@+id/tips"
            android:clickable="true">

            <ImageView
                android:id="@+id/tips_child"
                android:src="@drawable/tips"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Anonymous\nTips"
                android:textColor="#ffffff"
                android:id="@+id/textView4"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
